<h5 class="mb-3"><b>Lista de hoteles</b></h5>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <% @hoteles.each do |h| %>
                <tr>
                    <td class="text-center">
                        <%= h.id %>
                    </td>
                    <td class="">
                        <%= h.nombre %>
                    </td>
                    <td class="">
                        <% h.estrellas.to_i.times do |e| %>
                            ‚≠ê
                        <% end %>
                    </td>
                    <td class="">
                        <%= h.ciudad.nombre %>
                    </td>
                    <td class="text-center">
                        <%= link_to "Editar", editar_hotel_path(h), class: 'btn btn-warning' %>
                        Eliminar
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
</div>