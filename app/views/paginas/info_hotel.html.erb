<div class="row mt-5">
    
    <div class="col-lg-2">
        <h3>HCampestre 🌴</h3>
    </div>

    <%= form_with(url: "/", method: "get") do |formulario| %>

        <div class="col-lg-6 mb-3">
            <%= formulario.text_field :busqueda, class: 'form-control' %>
        </div>
        <div class="col-2"> 
            <%= formulario.submit "Buscar", class: 'btn btn-primary' %>
        </div>
    
    <% end %>
</div>









<div class="row mt-5">

    <h2><%= @hotel_encontrado.nombre %></h2>
    <h5><%= @hotel_encontrado.ciudad.nombre %></h5>
    <div class="mt-3">
        <% @hotel_encontrado.estrellas.times do %>
        ⭐
        <% end %>
    </div>
    <p>
        Habitaciones: <%= @hotel_encontrado.habitaciones.count %>
    </p>
    

</div>